# close window
cmd + shift - c : yabai -m window --close
# open terminal
cmd + shift - return : open -n -a "alacritty"
# restart yabai
cmd + alt - r : yabai --restart-service
# yabai
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - f3 : osascript -e 'tell application "Spotify" to playpause'
cmd - f2 : osascript -e 'tell application "Spotify" to next track'
cmd - f1 : osascript -e 'tell application "Spotify" to previous track'
cmd - f4 : yabai -m config menubar_opacity 0.0
cmd - f6 : pkill lock_mouse
cmd - f5 : ~/lock_mouse &
